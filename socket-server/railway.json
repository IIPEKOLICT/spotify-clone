{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "watchPatterns": ["src/**"],
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run prod",
    "healthcheckPath": "/status",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}